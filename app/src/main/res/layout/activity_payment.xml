<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".ui.payment.PaymentActivity">

    <ImageView
        android:id="@+id/homelgView"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/activity_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/payment"
        android:textSize="20sp"
        android:textAppearance="@style/font18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_articles"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="end|center"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_dummy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/font14"
            android:textColor="@color/black_hint"
            app:layout_constraintStart_toEndOf="@id/iv_articles"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name" />

        <TextView
            android:id="@+id/tv_online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/font12"
            android:textColor="@color/black_hint2"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:ignore="TextSizeCheck"
            tools:text="Status" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/doctor_logo"
            app:layout_constraintStart_toStartOf="@+id/tv_online"
            app:layout_constraintTop_toBottomOf="@+id/tv_online" />

        <TextView
            android:id="@+id/tv_spesialis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/font14"
            android:textColor="@color/black_hint2"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:ignore="TextSizeCheck"
            tools:text="Spesialis" />

        <ImageView
            android:id="@+id/iv_rating"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/rating_logo"
            app:layout_constraintStart_toEndOf="@+id/tv_spesialis"
            app:layout_constraintTop_toBottomOf="@+id/tv_online" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/font14"
            android:textColor="@color/black_hint2"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_rating"
            app:layout_constraintTop_toTopOf="@id/iv_rating"
            tools:ignore="TextSizeCheck"
            tools:text="Rating" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:src="@drawable/search_bg"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/tv_payment_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="bottom"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/total_payment"
        android:textAppearance="@style/font12"
        android:textColor="@color/black_hint"
        android:fontFamily="@font/poppins_bold"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/font12"
        android:textColor="@color/green"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toStartOf="@+id/tv_payment_total"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_total"
        tools:ignore="TextSizeCheck"
        tools:text="price" />

    <Button
        android:id="@+id/payment_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/green"
        android:text="Pay"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>